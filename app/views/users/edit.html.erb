<h2>User info</h2>

<%= form_for(@user) do |f| %>
	<label>Name</label><br>
	<%= f.text_field :username, placeholder: current_user.username, class: "name" %><br><br>

	<label>Image</label><br>
	<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user_image" %><br>

	<label>Introduction</label><br>
	<%= f.text_field :Introduction, placeholder: "", class: "introduction" %><br><br>

	<%= f.submit "Update User" %>

<% end %>