<div class="container">
	<div class="row">
	<%= render 'users/sidebar', book: @book, user: @user %>

		<div class="col-md-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th width="100px">Image</th>
						<th width="250px">Title</th>
						<th width="400px">Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user, :profile_image,  format: 'jpeg', class: "", fallback: "no_image.jpg", size: "60x70" %></td>
						<td><%= link_to book.title, book_path(book.id) %></td>
						<td><%= book.opinion %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>